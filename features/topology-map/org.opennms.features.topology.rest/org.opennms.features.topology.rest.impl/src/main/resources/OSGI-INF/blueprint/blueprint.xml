<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd">

    <reference id="topologyService" interface="org.opennms.features.topology.api.TopologyService" availability="mandatory" />
    <reference id="serviceLocator" interface="org.opennms.features.topology.api.support.ServiceLocator" availability="mandatory" />

    <bean id="topologyRestService" class="org.opennms.features.topology.rest.internal.TopologyRestServiceImpl">
        <argument ref="topologyService"/>
        <argument ref="topologyConverterDispatcher" />
        <argument ref="blueprintBundleContext" />
    </bean>
    <service interface="org.opennms.features.topology.rest.api.TopologyRestService" ref="topologyRestService">
        <service-properties>
            <entry key="registration.export" value="true" />
        </service-properties>
    </service>

    <bean id="topologyConverterDispatcher" class="org.opennms.features.topology.rest.internal.TopologyConverterDispatcher">
        <argument ref="serviceLocator" />
    </bean>
</blueprint>
